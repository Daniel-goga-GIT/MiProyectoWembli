{# templates/home/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Bienvenido a Wembli{% endblock %}

{% block contenido %}
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f8f8;
        color: #333;
    }

    .welcome-container {
        text-align: center;
        padding: 5rem 2rem;
    }

    .welcome-container h1 {
        font-size: 3rem;
        margin-bottom: 1rem;
    }

    .welcome-container p {
        font-size: 1.2rem;
        margin-bottom: 2rem;
    }

    .buttons a {
        display: inline-block;
        margin: 0 1rem;
        padding: 0.8rem 1.5rem;
        background-color: #007BFF;
        color: #fff;
        text-decoration: none;
        border-radius: 5px;
        transition: background-color 0.3s;
    }

    .buttons a:hover {
        background-color: #0056b3;
    }
</style>

<div class="welcome-container">
    <h1>Bienvenido a Wembli!</h1>
    <p>Explora nuestras categorías y añade tus productos favoritos a la cesta.</p>

    <div class="buttons">
        <a href="{{ path('categorias') }}">Ver Categorías</a>
        <a href="{{ path('cesta') }}">Ir a la Cesta</a>
    </div>
</div>
{% endblock %}
