{# templates/cabecera.html.twig #}
<h1>Mi Proyecto Wembli</h1>
<nav>
    <a href="{{ path('app_home') }}">Inicio</a>
    <a href="{{ path('categorias') }}">Categorías</a>
    <a href="{{ path('cesta') }}">Cesta</a>

    {% if app.user %}
        <span style="margin-left: 2em;">
            Conectado como <strong>{{ app.user.userIdentifier }}</strong> |
            <a href="{{ path('logout') }}">Cerrar sesión</a>
        </span>
    {% else %}
        <span style="margin-left: 2em;">
            <a href="{{ path('login') }}">Iniciar sesión</a>
        </span>
    {% endif %}
</nav>
<hr>
