{# templates/base.html.twig #}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Aplicaci√≥n Wembli{% endblock %}</title>
    <style>
        body { font-family: Arial, sans-serif; margin: 0; padding: 0; background: #fafafa; }
        header, footer { background: #f0f0f0; padding: 1em; }
        nav a { margin-right: 1em; text-decoration: none; color: #333; font-weight: bold; }
        nav a:hover { color: #007BFF; }
        main { padding: 1em; }
        hr { margin-top: 0.5em; margin-bottom: 0.5em; }
        footer { text-align: center; font-size: 0.9em; color: #555; }
    </style>
</head>
<body>
    <header>
        {% block header %}
            {{ include('cabecera.html.twig') }}
        {% endblock %}
    </header>

    <main>
        {% block contenido %}{% endblock %}
    </main>

    <footer>
        {% block footer %}
            <p>&copy; {{ "now"|date("Y") }} Proyecto Wembli</p>
        {% endblock %}
    </footer>
</body>
</html>
